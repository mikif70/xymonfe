{
  "apps" : [{
    "name"        : "xymonfe",
    "script"      : "main.js",
    "log_date_format"  : "YYYY-MM-DD HH:mm Z",
    "exec_mode"  : "cluster_mode",
    "watch"       : true,
    "instance"    : 3,
    "cwd"         : "/root/xymonfe.exe/bundle",
    "log_file"   : "/var/log/meteor/xymonfe.log",
    "out_file":"/var/log/meteor/xymonfe-out.log",
    "error_file":"/var/log/meteor/xymonfe.err",
    "env": {
      "ROOT_URL":"http://noc.monitoring.tiscali.sys",
      "PORT":"8000",
      "MAIL_URL":"",
      "MONGO_URL":"mongodb://127.0.0.1:27017/xymon"
    }
  }]
}
